
div.row
  button.btn.btn-success(ng-click="save()") Save
div.row
  table(class="table category", ng-hide="product")
    thead
      tr
        td Transaction
        td Amount
        td Date
        td Category
    tr(
        ng-repeat="transaction in transactions", 
        ng-class="{danger : transaction.amount < 0, 'success' : transaction.amount > 0}"
      )
      td.col-md-3.verflow-text  {{ transaction.transaction }}
      td.col-md-2  {{ transaction.amount }}
      td.col-md-2  {{ transaction.date | date:'yyyy-MM-dd HH:mm' }}
      td.col-md-2.col-lg-2
        div(category)